pipeline {
    agent any

    environment {
        // ðŸ‘‡ YAHAN apna naya Docker Hub username likh dein
        DOCKER_HUB_USERNAME = 'swatiranjan'  
        DOCKER_HUB_CREDS = credentials('docker-hub-credentials')
    }

    
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ranjanSwati/my-microservices-project.git'
            }
        }

        stage('Build Config Server') {
            steps {
                dir('config-server') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Discovery Server') {
            steps {
                dir('servicediscovery') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build API Gateway') {
            steps {
                dir('api-gateway') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Product Service') {
            steps {
                dir('products') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Order Service') {
            steps {
                dir('orders') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                }
            }
        }
    }
}
