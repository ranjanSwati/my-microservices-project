pipeline {
    agent any
    
    environment {
        // ðŸ‘‡ Yahan maine aapka sahi username 'swatiranjan' likh diya hai
        DOCKER_HUB_USERNAME = 'swatiranjan' 
        DOCKER_HUB_CREDS = credentials('docker-hub-credentials')
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ranjanSwati/my-microservices-project.git'
            }
        }
        
        // --- PRODUCT SERVICE ---
        stage('Build & Push Product Service') {
            steps {
                dir('products') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                    // Docker Image Banana
                    sh "docker build -t ${DOCKER_HUB_USERNAME}/products:latest ."
                    // Docker Hub par Login aur Upload
                    sh "echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin"
                    sh "docker push ${DOCKER_HUB_USERNAME}/product-service:latest"
                }
            }
        }

        // --- ORDER SERVICE ---
        stage('Build & Push Order Service') {
            steps {
                dir('orders') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                    sh "docker build -t ${DOCKER_HUB_USERNAME}/orders:latest ."
                    sh "echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin"
                    sh "docker push ${DOCKER_HUB_USERNAME}/order-service:latest"
                }
            }
        }
        
        // --- API GATEWAY ---
        stage('Build & Push API Gateway') {
            steps {
                dir('api-gateway') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                    sh "docker build -t ${DOCKER_HUB_USERNAME}/api-gateway:latest ."
                    sh "echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin"
                    sh "docker push ${DOCKER_HUB_USERNAME}/api-gateway:latest"
                }
            }
        }
        
        // --- DISCOVERY SERVER ---
        stage('Build & Push Discovery Server') {
            steps {
                dir('servicediscovery') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                    sh "docker build -t ${DOCKER_HUB_USERNAME}/servicediscovery:latest ."
                    sh "echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin"
                    sh "docker push ${DOCKER_HUB_USERNAME}/servicediscovery:latest"
                }
            }
        }
        
        // --- CONFIG SERVER ---
        stage('Build & Push Config Server') {
            steps {
                dir('config-server') {
                    sh 'chmod +x mvnw'
                    sh './mvnw clean package -DskipTests'
                    sh "docker build -t ${DOCKER_HUB_USERNAME}/config-server:latest ."
                    sh "echo $DOCKER_HUB_CREDS_PSW | docker login -u $DOCKER_HUB_CREDS_USR --password-stdin"
                    sh "docker push ${DOCKER_HUB_USERNAME}/config-server:latest"
                }
            }
        }
    }
}
